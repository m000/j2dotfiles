" SyntaxRange *****************************************************************
:call SyntaxRange#Include('#begin=python#', '#end=python#', 'python', 'NonText')

{% if path.pin is dir %}
" Intel Pin Types *************************************************************
syn match cType "U\?INT\(8\|16\|32\|64\)"
syn keyword cType ADDRINT BOOL VOID

syn match cppType "U\?INT\(8\|16\|32\|64\)"
syn keyword cppType ADDRINT BOOL VOID
syn keyword cppBoolean TRUE FALSE
{% endif %}

" Custom types ****************************************************************
syn match cType "[a-z][a-z][a-z0-9_]*[a-z0-9]_t\([^a-z0-9_]\)\@="

" Folding *********************************************************************
setlocal foldmethod=syntax
setlocal foldnestmax=2
setlocal foldlevel=2

" Highlight column 81 *********************************************************
let &colorcolumn=81

